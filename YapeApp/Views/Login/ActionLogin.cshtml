@model YapeApp.Models.Cliente

@{
    ViewBag.Title = "Iniciar Sesión";
}

<h2>Iniciar Sesión</h2>

@using (Html.BeginForm("ActionLogin", "Login", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    <div class="container">
        @if (ViewBag.UsuarioInvalido != null)
        {
            <div class="alert alert-danger">
                @ViewBag.UsuarioInvalido
            </div>
        }
        @if (ViewBag.mensaje != null)
        {
            <div class="alert alert-danger">
                @ViewBag.mensaje
            </div>
        }
        <div class="form-group">
            @Html.Label("Número")
            @Html.TextBoxFor(Model => Model.NUM_CLI, "Numero", new { @class = "form-control", maxLength = 9, minLength = 9 })
            @Html.ValidationMessageFor(Model => Model.NUM_CLI, "", new {@class = "text-danger"})
        </div>
        <div class="form-group">
            @Html.Label("Clave")
            @Html.PasswordFor(Model => Model.CLA_CLI, new { @class = "form-control", minLength = 1 })
            @Html.ValidationMessageFor(Model => Model.CLA_CLI, "", new {@class = "text-danger"})
        </div>
        <br />
        <div class="btn-group">
            <button type="submit" class="btn btn-primary">Ingresar</button>
        </div>
    </div>

    @section Scripts {
        @Scripts.Render("~/bundles/jqueryval")
    }
}

