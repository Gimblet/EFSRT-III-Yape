@model YapeApp.Models.Cliente

@{
    Layout = null;
}

@Styles.Render("~/Content/css")
@Scripts.Render("~/bundles/modernizr")

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <style>
        body {
            background-color: #f7f7f7;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
            margin: 0;
        }

        .login-container {
            background-color: white;
            padding: 30px;
            border-radius: 10px;
            box-shadow: 0 4px 8px rgba(0,0,0,0.1);
            width: 100%;
            max-width: 400px;
        }

        .btn-primary {
            background-color: #800080;
            border-color: #800080;
        }

            .btn-primary:hover {
                background-color: #4b0082;
                border-color: #4b0082;
            }
    </style>
    <title>Yape - Iniciar Sesión</title>
</head>

<body>
    <div class="login-container">

        <h2 class="text-center">Iniciar Sesión</h2>

        @using (Html.BeginForm("ActionLogin", "Login", FormMethod.Post))
        {
            @Html.AntiForgeryToken()
            <div class="container">
                @if (ViewBag.UsuarioInvalido != null)
                {
                    <div class="alert alert-danger">
                        @ViewBag.UsuarioInvalido
                    </div>
                }
                @if (ViewBag.mensaje != null)
                {
                    <div class="alert alert-danger">
                        @ViewBag.mensaje
                    </div>
                }
                @if (ViewBag.MensajeBueno != null)
                {
                    <div class="alert alert-success">
                        @ViewBag.MensajeBueno
                    </div>
                }
                <div class="form-group">
                    @Html.Label("Número")
                    @Html.TextBoxFor(Model => Model.NUM_CLI, "Numero", new { @class = "form-control", maxLength = 9, minLength = 9, @placeholder = "Ingrese su Número" })
                    @Html.ValidationMessageFor(Model => Model.NUM_CLI, "", new { @class = "text-danger" })
                </div>
                <div class="form-group">
                    @Html.Label("Clave")
                    @Html.PasswordFor(Model => Model.CLA_CLI, new { @class = "form-control", minLength = 1, @placeholder = "Ingrese su clave" })
                    @Html.ValidationMessageFor(Model => Model.CLA_CLI, "", new { @class = "text-danger" })
                </div>
                <br />
                <div class="btn-group">
                    <button type="submit" class="btn btn-primary">Ingresar</button>
                </div>
            </div>

            @Scripts.Render("~/bundles/jquery")
            @Scripts.Render("~/bundles/bootstrap")
            @Scripts.Render("~/bundles/jqueryval")
        }
    </div>
</body>
</html>

