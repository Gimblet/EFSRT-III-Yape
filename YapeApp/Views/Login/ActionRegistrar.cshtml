@model YapeApp.Models.Cliente

@{
    ViewBag.Title = "Registrar Usuario";
}

<h2>Registrar Nuevo Usuario</h2>


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Cliente</h4>

        <div class="form-group">
            @Html.LabelFor(model => model.DNI_CLI, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.DNI_CLI, new { htmlAttributes = new { @class = "form-control", maxLength = 8, minLength = 8, @placeholder = "Ingrese su Nro de DNI" } })
                @Html.ValidationMessageFor(model => model.DNI_CLI, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.NOM_CLI, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.NOM_CLI, new { htmlAttributes = new { @class = "form-control", maxLength = 50, minLength = 1, @placeholder = "Ingrese sus Nombres" } })
                @Html.ValidationMessageFor(model => model.NOM_CLI, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.APE_CLI, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.APE_CLI, new { htmlAttributes = new { @class = "form-control", maxLength = 50, minLength = 1, @placeholder = "Ingrese sus Apellidos" } })
                @Html.ValidationMessageFor(model => model.APE_CLI, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.NUM_CLI, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.NUM_CLI, new { htmlAttributes = new { @class = "form-control", maxLength = 9, minLength = 9, @placeholder = "Ingrese su Número" } })
                @Html.ValidationMessageFor(model => model.NUM_CLI, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.CLA_CLI, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.CLA_CLI, new { htmlAttributes = new { @class = "form-control", maxLength = 100, minLength = 4, @placeholder = "Ingrese su Clave" } })
